{
  "$id": "https://buchhalter.ai/oicdb.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "buchhalter.ai Open Invoice Collector DB",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "recipes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/recipe"
      }
    }
  },
  "required": [
    "name",
    "version",
    "recipes"
  ],
  "definitions": {
    "recipe": {
      "type": "object",
      "description": "An Open Invoice Collector Recipe for a specific supplier",
      "properties": {
        "provider": {
          "type": "string",
          "minLength": 1
        },
        "domains": {
          "type": "array",
          "items": {
            "required": [],
            "properties": {}
          }
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "minLength": 1
        },
        "steps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/step"
              },
              {
                "$ref": "#/definitions/stepOpenUrl"
              },
              {
                "$ref": "#/definitions/stepTypeWithKeyboard"
              },
              {
                "$ref": "#/definitions/stepEvaluateJsCode"
              },
              {
                "$ref": "#/definitions/stepOauth2Setup"
              }
            ]
          }
        }
      },
      "required": [
        "provider",
        "domains",
        "version",
        "type",
        "steps"
      ]
    },
    "step": {
      "type": "object",
      "description": "One step in an Open Invoice Collector Recipe",
      "properties": {
        "action": {
          "type": "string",
          "minLength": 1,
          "enum": [
            "open",
            "click",
            "waitFor",
            "sleep",
            "removeElement",
            "type",
            "transform",
            "move",
            "evaluate",
            "downloadAll",
            "oauth2-setup",
            "oauth2-check-tokens",
            "oauth2-authenticate",
            "oauth2-post-and-get-items"
          ]
        },
        "when": {
          "$refs": "#/definitions/stepCondition"
        }
      },
      "required": [
        "action"
      ]
    },
    "stepOpenUrl": {
      "type": "object",
      "description": "Open a specific url",
      "properties": {
        "action": {
          "type": "string",
          "minLength": 1
        },
        "when": {
          "$refs": "#/definitions/stepCondition"
        },
        "url": {
          "type": "string",
          "format": "url"
        }
      },
      "if": {
        "properties": {
          "action": {
            "const": "open"
          }
        }
      },
      "then": {
        "required": [
          "action",
          "url"
        ]
      }
    },
    "stepTypeWithKeyboard": {
      "type": "object",
      "description": "Insert characters with the keyboard into a input element",
      "properties": {
        "action": {
          "type": "string",
          "minLength": 1
        },
        "when": {
          "$refs": "#/definitions/stepCondition"
        },
        "selector": {
          "type": "string",
          "minLength": 1
        },
        "value": {
          "type": "string",
          "minLength": 1
        }
      },
      "if": {
        "properties": {
          "action": {
            "const": "type"
          }
        }
      },
      "then": {
        "required": [
          "action",
          "selector",
          "value"
        ]
      }
    },
    "stepEvaluateJsCode": {
      "type": "object",
      "description": "Evaluate individual js code (only for complicated tasks)",
      "properties": {
        "action": {
          "type": "string",
          "minLength": 1
        },
        "when": {
          "$refs": "#/definitions/stepCondition"
        },
        "execute": {
          "type": "string",
          "minLength": 1
        }
      },
      "if": {
        "properties": {
          "action": {
            "const": "evaluate"
          }
        }
      },
      "then": {
        "required": [
          "action",
          "execute"
        ]
      }
    },
    "stepCondition": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "url"
        }
      },
      "required": [
        "url"
      ]
    },
    "stepOauth2Setup": {
      "type": "object",
      "description": "Setup OAuth2 authentication",
      "properties": {
        "action": {
          "type": "string",
          "minLength": 1
        },
        "oauth2": {
          "type": "object",
          "required": [
            "authUrl",
            "tokenUrl",
            "redirectUrl",
            "clientId",
            "scope",
            "pkceMethod",
            "pkceVerifierLength"
          ],
          "properties": {
            "authUrl": {
              "type": "string",
              "format": "uri"
            },
            "tokenUrl": {
              "type": "string",
              "format": "uri"
            },
            "redirectUrl": {
              "type": "string",
              "format": "uri"
            },
            "clientId": {
              "type": "string"
            },
            "scope": {
              "type": "string"
            },
            "pkceMethod": {
              "type": "string",
              "minLength": 1,
              "enum": [
                "S256"
              ]
            },
            "pkceVerifierLength": {
              "type": "integer",
              "minLength": 1
            }
          }
        }
      },
      "if": {
        "properties": {
          "action": {
            "const": "oauth2-setup"
          }
        }
      },
      "then": {
        "required": [
          "oauth2"
        ]
      }
    }
  },
  "additionalProperties": false
}
